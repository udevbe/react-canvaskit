{
  "name": "react-canvaskit",
  "version": "0.0.1-alpha.7",
  "description": "A React implementation of the Skia-CanvasKit drawing library.",
  "keywords": [
    "react",
    "reactjs",
    "skia",
    "skia-library",
    "canvas",
    "webgl",
    "html5-canvas",
    "html5",
    "react-reconciler",
    "canvaskit",
    "accelerated",
    "hardware-acceleration"
  ],
  "main": "dist/index.js",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "prebuild": "rimraf dist types",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "yarn test -- --no-cache"
  },
  "dependencies": {
    "react-reconciler": "0.26.2"
  },
  "peerDependencies": {
    "canvaskit-wasm": "0.32.0",
    "react": "17.0.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@types/react-reconciler": "^0.26.3",
    "canvaskit-wasm": "0.32.0",
    "cpy-cli": "^3.1.1",
    "jest": "^27.0.6",
    "jest-config": "^27.0.6",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.3.2",
    "react-devtools": "^4.14.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "author": "Erik De Rijcke",
  "homepage": "https://github.com/udevbe/react-canvaskit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/udevbe/react-canvaskit"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "compositor-module/node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ],
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
